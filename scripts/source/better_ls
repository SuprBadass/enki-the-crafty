mydir=${(%):-%N}
mydir=`dirname $mydir`

export LS_OPTIONS='--color=auto'

eval `gdircolors ${mydir}/dircolors`

alias ls='gls ${LS_OPTIONS} --group-directories-first -hF'
alias ll='gls ${LS_OPTIONS} --group-directories-first -lhF'
alias l='gls ${LS_OPTIONS} --group-directories-first -lAhF'
alias c="clear"
alias e="exit"

